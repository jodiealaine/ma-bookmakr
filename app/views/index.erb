<h1>bookmarkr</h1>
<ul>
  <% @links.each do |link| %>
    <li><a href="<%= link.url %>"><%= link.title %></a></li>
  <% end %>
</ul>

<div id="new-link">
  <form action="/links" method="post">
    url <input type="text" name="url">
    title <input type="text" name="title">
    tags <input type="text" name="tags">
    <input type="submit" value="add">
  </form>
</div>
